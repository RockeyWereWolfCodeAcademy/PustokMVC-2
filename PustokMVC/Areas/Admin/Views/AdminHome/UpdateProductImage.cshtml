@using PustokMVC.Areas.Admin.ViewModels.AdminProductImageVM;
@{
	ViewData["Title"] = "Update Image";
}

@model AdminProductImageUpdateVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"] </h6>
    </div>
    <div class="card-body">
        <form action="" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="ImageFile">Dont upload if you dont want to change file!</label>
                <input asp-for="ImageFile" accept="image/*">
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId">Products</label>
                <select class="form-control" asp-for="ProductId" asp-items='@new SelectList(ViewBag.Products, "Id" , "Name")'>
                    <option disabled selected>Select Product</option>
                </select>
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="no">Not active image</label>
                <input asp-for="IsActive" value="false" id="no" type="radio">
                <label for="yes">Is active image</label>
                <input asp-for="IsActive" value="true" id="yes" type="radio">
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <button class="btn btn-success">Update</button>
        </form>
    </div>
</div>

