@using PustokMVC.Areas.Admin.ViewModels.AdminAuthorVM;
@{
	ViewData["Title"] = "Create Author";
}

@model AdminAuthorCreateVM

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"] </h6>
    </div>
    <div class="card-body">
        <form action="" method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname">Categories</label>
                <input class="form-control" asp-for="Surname">
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <button class="btn btn-success">Create</button>
        </form>
    </div>
</div>
